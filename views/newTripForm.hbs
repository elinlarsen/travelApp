<script src="../javascripts/trips.js"></script>

<div class="big-container product-manage-wrapper flexed-item">

    <h1>Tell us about your future trip !</h1>

    <form action="/trip_add" method="POST" class="add-trip-form" enctype="multipart/form-data">

        <div class="form-item-wrapper">
            <label for="name" class="label-name label">Name your trip</label>
            <br>
            <input type="text" name="name" class="input-text input" placeholder="e.g Madagascar 2019" value="test name">
        </div>

        <div class="form-item-wrapper">
            <label for="start_date" class="label-name label">When does it start?</label>
            <br>
            <input type="date" name="start_date" class="input-text input" placeholder="2019/01/01" value="2019/01/01">
        </div>

        <div class="form-item-wrapper">
            <label for="end_date" class="label-name label">When does it end?</label>
            <br>
            <input type="date" name="end_date" class="input-text input" placeholder="2019/10/01" value="2019/10/01">
        </div>

        <div class="form-item-wrapper">
            <label for="picture" class="label-name label">Upload a picture !</label>
            <br>
            <input type="file" name="picture" class="input-text input" placeholder="your picture here">
        </div>

        <button id="add-trip-button" class="add-trip button-primary">Save this trip</button>

    </form>

</div>
